<UserControl x:Name="ToggleSwitch" x:Class="StaffSRC.Toggle"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:StaffSRC"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Viewbox Margin="0, 0, 0, 0" Stretch="Uniform">
        <Grid Margin="0, 0, 0, 0" Height="450" Width="800">
            <Rectangle x:Name="Back" Fill="#FFA0A0A0" Margin="20, 20, 20, 20" RadiusX="200" RadiusY="200" MouseLeftButtonDown="Back_MouseLeftButtonDown"/>
            <Ellipse x:Name="Dot" Fill="White" Height="370" Width="370" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="-345, 0, 0, 0" MouseLeftButtonDown="Dot_MouseLeftButtonDown"/>
        </Grid>
    </Viewbox>
</UserControl>
